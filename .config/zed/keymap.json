[
  {
    "context": "VimControl && !menu",
    "bindings": {
      "left": "editor::MoveLeft",
      "down": "editor::MoveDown",
      "ctrl-j": "vim::Down",
      "up": "editor::MoveUp",
      "right": "editor::MoveRight",
      "ctrl-down": "vim::ScrollDown",
      "ctrl-up": "vim::ScrollUp"
    }
  },
  {
    "context": "Editor && (vim_mode == insert) && !VimWaiting && !menu",
    "bindings": {
      "alt-x": "workspace::SaveWithoutFormat",
      "ctrl-s": ["workspace::SendKeystrokes", "alt-x escape"]
    }
  },
  {
    "context": "Editor && vim_mode==normal",
    "bindings": {
      "j": ["workspace::SendKeystrokes", "g j"],
      "k": ["workspace::SendKeystrokes", "g k"],
      "shift-d $": "editor::DeleteToEndOfLine",
      "shift-d shift-d": "editor::DeleteLine",
      "ctrl-u": ["workspace::SendKeystrokes", "ctrl-up z z"],
      "ctrl-d": ["workspace::SendKeystrokes", "ctrl-down z z"],
      "g c": "editor::ToggleComments"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
      "space u w": "editor::ToggleSoftWrap",
      "space z": "workspace::ToggleCenteredLayout",
      "space m p": "markdown::OpenPreview",
      "space m P": "markdown::OpenPreviewToTheSide",
      "space c a": "editor::ToggleCodeActions",
      "space c f": "editor::Format",
      "space g g": [
        "task::Spawn",
        {
          "task_name": "lazygit"
        }
      ]
    }
  },
  {
    "context": "Editor && (vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "shift-d": "editor::Delete"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "A": "project_panel::NewDirectory",
      "r": "project_panel::Rename",
      "d": "project_panel::Delete",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste"
    }
  },
  {
    "context": "!Editor",
    "bindings": {
      "space space": "file_finder::Toggle"
    }
  },
  {
    "context": "EmptyPane || ProjectPanel ||  (Editor  && (vim_mode == normal || vim_mode == visual )) ",
    "bindings": {
      "space b d": "pane::CloseActiveItem",
      "space b r": "pane::CloseItemsToTheRight",
      "space b l": "pane::CloseItemsToTheLeft",
      "space b a": "pane::CloseAllItems",
      "space e": "project_panel::ToggleFocus",
      "space space": "file_finder::Toggle",
      "space s s": "outline::Toggle",
      "space s S": "project_symbols::Toggle",
      "space f b": "zed::OpenKeymapFile",
      "space f s": "zed::OpenSettingsFile",
      "space g g": "git_panel::ToggleFocus",
      "space g c": "git::CheckoutBranch"
    }
  },
  {
    "bindings": {
      "alt-r": "projects::OpenRecent"
    }
  },
  {
    "context": "VimControl",
    "bindings": {
      "ctrl-j": "pane::TogglePinTab"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "alt-u": "git::UnstageFile",
      "alt-p": "git::Push",
      "alt-P": "git::Pull",
      "alt-d": "git::RestoreFile",
      "alt-a": "git::StageAll",
      "alt-b": "git::Switch"
    }
  },
  {
    "context": "GitPanel && vim_mode == normal || !Editor",
    "bindings": {
      "space e": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "FileFinder || (FileFinder > Picker > Editor)",
    "bindings": {
      "ctrl-p": "menu::SelectPrevious"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-n": null,
      "ctrl-p": null
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-k": null
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-/": null
    }
  }
]
